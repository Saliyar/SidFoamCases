FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    waveMaker
    {
        type            wavemakerMovement;
        value           uniform (0 0 0);
    }
    walls
    {
        type            empty;
        value           uniform (0 0 0);
    }
    bottom
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    outlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    atmosphere
    {
        type            zeroGradient;
        //value           uniform (0 0 0);
    }
    floater
    {
        type            calculated;
        value           uniform (0 0 0);
    }
}


